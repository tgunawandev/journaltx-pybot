# Database
JOURNALTX_DB_PATH=data/journaltx.db

# Mode: TEST or LIVE
MODE=TEST

# ========================================
# CONFIGURATION TEMPLATES (JSON-based)
# ========================================
# All thresholds, filters, and parameters are now in JSON files!
# Just select the template names here.

# Profile Template: Trading style and alert thresholds
# Options:
#   - conservative: High LP minimums, lowest frequency (2000 SOL, $300K)
#   - balanced: Medium LP and frequency (500 SOL, $50K) [DEFAULT]
#   - exploratory: Early entry, balanced noise (100 SOL, $5K)
# Location: config/profiles/{profile}.json
PROFILE_TEMPLATE=balanced

# Filter Template: Early-stage meme filters
# Options:
#   - default: Standard early-stage filters (max $20M, 24h age)
#   - Create custom files in config/filters/
# Location: config/filters/{filter}.json
FILTER_TEMPLATE=default

# ========================================
# CREDENTIALS (Required)
# ========================================

# QuickNode Solana RPC endpoints
# Get yours at: https://www.quicknode.com
QUICKNODE_WS_URL=wss://your-quicknode-ws-url
QUICKNODE_HTTP_URL=https://your-quicknode-http-url

# Telegram Bot Configuration
# 1. Message @BotFather on Telegram
# 2. /newbot to create bot
# 3. Copy bot token here
# 4. Add bot to your group
# 5. Run: python scripts/get_chat_id.py
# 6. Copy chat ID here
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# ========================================
# OPTIONAL SETTINGS
# ========================================

# Timezone for alerts (default: Asia/Jakarta)
# Options: UTC, Asia/Jakarta, America/New_York, etc.
TIMEZONE=Asia/Jakarta

# ========================================
# TRADING AUTOMATION (Optional)
# ========================================
# Enable Telegram-based buy automation.
# Requires a SEPARATE trading wallet (Phantom/Solflare).

# Master switch - set to true to enable trading
TRADING_ENABLED=false

# Wallet encryption key (32 bytes, 64 hex chars)
# Generate with: python -c "import os; print(os.urandom(32).hex())"
WALLET_ENCRYPTION_KEY=

# Spending limits (USD)
TRADING_MAX_PER_TRADE=50
TRADING_DAILY_LIMIT=100
TRADING_WEEKLY_LIMIT=300

# Buy button tiers (USD amounts)
TRADING_TIERS=10,25,50

# Jupiter swap settings
TRADING_SLIPPAGE_BPS=100
TRADING_PRIORITY_FEE=100000

